<h1> Edit <%= @meal.name %>! </h1>
<form action="/meals/<%= @meal.id %>" method="post">
    <input type="hidden" name="_method" value="patch">
    <label for="name"> What is this meal called? </label>
        <input type="text" name="name" value="<%= @meal.name %>">
    <br><label for="meal_time"> Is this Breakfast, Lunch, or Dinner? </label>
        <input type="text" name="meal_time" value="<%= @meal.meal_time %>">
    <br><label for ="ingredients"> Ingredients: </label>
        <textarea name="ingredients" style="width:auto; height:auto;"><%= @meal.ingredients %></textarea>>
    
    <% if @meal.photo != "" %>
        <p><img src="<%=@meal.photo %>">
<br><h6><label for="photo"> A picture of your <%= @meal.name %>. </label></h6>
<% end %>
        <input type="submit" value="Change Your Meal">
</form>

<form action="/meals/<%= @meal.id %>" method="post">
        <input type="hidden" name="_method" value="DELETE">
        <input type="submit" value="Delete">
</form>