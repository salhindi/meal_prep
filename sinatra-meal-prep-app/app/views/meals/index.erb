<h2>Checkout everyone's meals.</h2>


<% @meals.each do |m| %>
    <br><br><%= m.name.capitalize %> for <%= m.meal_time.capitalize %>.  
    
    <br>Items involved: <%= m.ingredients %>
    <h4><br>By: <%= m.user.name.capitalize %></h4>
    <% if current_user == m.user %>
        <a href="meals/<%= m.id %>/edit"> Edit Meal</a>
        <br>
        <% end %>
    <% end %>
<br>